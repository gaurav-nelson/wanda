{
  "name": "wanda",
  "version": "0.0.0",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@8.3.1",
  "scripts": {
    "prebuild": "copyright-header --fix --copyrightHolder \"Wonderflow\" --include \"src\" --exclude \"apps/docs,.storybook,.d.ts,.stories.tsx\" --templateId \"apache\"",
    "prebuild:apps": "graphql-codegen --config codegen.yml",
    "build": "turbo run build",
    "build:nocache": "turbo run build --force",
    "build:apps": "turbo run build:next",
    "start": "run-s codegen && turbo run start --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "release": "changeset publish",
    "prepare": "is-ci || husky install",
    "update:deps": "npx npm-upgrade-monorepo",
    "change": "changeset",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "graphql-codegen --watch --config codegen.yml"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint",
    "*.{css}": "stylelint"
  },
  "devDependencies": {
    "@changesets/cli": "2.24.4",
    "@graphql-codegen/cli": "2.12.0",
    "@graphql-codegen/typescript": "2.7.3",
    "@graphql-codegen/typescript-operations": "2.5.3",
    "@graphql-codegen/typescript-react-apollo": "3.3.3",
    "@lasalefamine/eslint-config": "2.0.7",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "@typescript-eslint/parser": "5.37.0",
    "@wonderflow/stylelint-config": "1.2.1",
    "copyright-header": "0.4.6",
    "eslint": "8.23.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-mdx": "2.0.4",
    "eslint-plugin-react": "7.31.8",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "stylelint-config-standard": "28.0.0",
    "ts-node": "10.9.1",
    "tsc-alias": "1.7.0",
    "turbo": "1.4.6",
    "typescript": "4.8.3",
    "typescript-plugin-css-modules": "3.4.0",
    "uvu": "0.5.6"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=14.0.0"
  }
}
